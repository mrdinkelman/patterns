<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
    <testsuites>
        <testsuite name="Project Test Suite">
            <directory>../src</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../src</directory>
            <exclude>
                <directory>../tests</directory>
                <directory>../vendor</directory>
            </exclude>
        </whitelist>
    </filter>

    <testsuites>
        <testsuite name="Application Test Suite">
            <directory>../tests</directory>
        </testsuite>
    </testsuites>
</phpunit>